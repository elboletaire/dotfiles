[init]
    templatedir = ~/.dotfiles/git-templates

[user]
    name = Ã’scar Casajuana
    email = elboletaire@underave.net

[core]
    editor = vim
    autocrlf = false
    filemode = false
    signingkey = 332B2135995302F1

[push]
    default = current

[branch]
    autosetuprebase = always

[merge]
    tool = sublimerge

[diff]
    tool = vimdiff

[mergetool]
    prompt = false

[difftool]
    prompt = false

[alias]
    pull-up = "!f() { git pull && git submodule update --init --recursive && git submodule status; }; f"
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    c = commit -S
    co = commit -S
    rc = !git reset $1 && git checkout $1
    rcs = !git reset $1 && git checkout $1 && git status
    recent = "!r() { cur=$(git rev-parse --abbrev-ref HEAD); git for-each-ref --sort=-committerdate refs/heads/ --format='%(color:yellow)%(refname:short)|%(color:green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:magenta)%(authorname)%(color:reset)' | sed \"s@m${cur}|@m* ${cur}|@\" | column -ts'|'; }; r"
    d = difftool
    m = mergetool

[color]
    ui = always
    branch = always
    diff = always
    interactive = always
    status = always

[color "status"]
    untracked = red bold
    changed = red bold

[color "diff"]
    meta = yellow bold
    commit = green
    frag = magenta bold
    old = red
    new = green
    whitespace = red reverse

[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
    old = red bold
    new = green
    whitespace = red reverse

[color "branch"]
    remote = red bold


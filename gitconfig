[init]
    templatedir = ~/.dotfiles/git-templates

[user]
    name = Ã’scar Casajuana
    email = elboletaire@gmail.com
    signingkey = 3D8D55409254C7C6

[commit]
    gpgsign = true

[core]
    editor = vim

[push]
    default = current

[branch]
    autosetuprebase = always
[merge]
    tool = sublimerge

[diff]
    tool = vimdiff

[mergetool "sublimerge"]
    cmd = subl -n --wait \"$REMOTE\" \"$BASE\" \"$LOCAL\" \"$MERGED\" --command \"sublimerge_diff_views\"
    trustExitCode = false

[mergetool]
    prompt = false

[difftool]
    prompt = false

[alias]
    pull-up = "!f() { git pull && git submodule update --init --recursive && git submodule status; }; f"
    lol = log --graph --decorate --pretty=oneline --abbrev-commit
    lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
    c = commit -S
    co = commit -S
    rc = !git reset $1 && git checkout $1
    rcs = !git reset $1 && git checkout $1 && git status
    recent = "!r() { cur=$(git rev-parse --abbrev-ref HEAD); git for-each-ref --sort=-committerdate refs/heads/ --format='%(color:yellow)%(refname:short)|%(color:green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:magenta)%(authorname)%(color:reset)' | sed \"s@m${cur}|@m* ${cur}|@\" | column -ts'|'; }; r"
    d = difftool
    m = mergetool
    stashq = -c commit.gpgsign=false stash

[color]
    ui = always
    branch = always
    diff = always
    interactive = always
    status = always

[color "status"]
    untracked = red bold
    changed = red bold

[color "diff"]
    meta = yellow bold
    commit = green
    frag = magenta bold
    old = red bold
    new = green
    whitespace = red reverse

[color "branch"]
    remote = red bold

[pager]
    diff = diff-so-fancy | less --tabs=1,5 -RFX
    show = diff-so-fancy | less --tabs=1,5 -RFX

# [interactive]
#    diffFilter = "diff-so-fancy"

[color "diff-highlight"]
    oldNormal = red bold
    oldHighlight = red bold 52
    newNormal = green bold
    newHighlight = green bold 22

[url "git@gitlab.com:"]
	insteadOf = https://gitlab.com/
[url "git@github.com:"]
	insteadOf = https://github.com/
